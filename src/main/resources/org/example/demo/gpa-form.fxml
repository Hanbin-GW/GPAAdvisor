<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.GpaFormController"
      spacing="10" alignment="CENTER" padding="20">

    <Label text="GPA Calculator" style="-fx-font-size: 18px;" />

    <HBox spacing="5">
        <Label text="Subject 1:" />
        <TextField fx:id="subject1Field" promptText="A / B+ / C"/>
    </HBox>

    <HBox spacing="5">
        <Label text="Subject 2:" />
        <TextField fx:id="subject2Field" promptText="A / B+ / C"/>
    </HBox>

    <HBox spacing="5">
        <Label text="Subject 3:" />
        <TextField fx:id="subject3Field" promptText="A / B+ / C"/>
    </HBox>

    <Button text="Calculate GPA" onAction="#calculateGpa"/>
    <Label fx:id="resultLabel" text="Result will appear here"/>
</VBox>

