<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.GpaForm"
      spacing="10" alignment="CENTER" prefWidth="600" prefHeight="400">

    <Label text="GPA 계산기" style="-fx-font-size: 18px;" />

    <TextField fx:id="subjectNameField" promptText="과목 이름 (예: Math)" />
    <TextField fx:id="creditField" promptText="학점 (예: 3)" />
    <TextField fx:id="gradeField" promptText="GPA (예: 4.0)" />

    <Button text="과목 추가" onAction="#addSubject" />
    <Button text="점수 입력 화면으로 이동" onAction="#goToScorePage" />

    <Label fx:id="statusLabel" text="0/5 과목 등록됨" />
    <Label fx:id="resultLabel" text="총 GPA가 여기에 표시됩니다" />

</VBox>
